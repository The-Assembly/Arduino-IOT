  setDebugMessageLevel(2);
  ArduinoCloud.printDebugInfo();
  pinMode(ledPin, OUTPUT);
  dht.begin();
  
}

void loop() {
  ArduinoCloud.update();
  
  onTemperatureChange();
  onHumidityChange();
  

}


void onLightChange() 
{

analogWrite(LEDPIN, light);
}


void onTemperatureChange()
{
  
  temperature = dht.readTemperature();
}

